var cfg = {
     "_id" : "<%= @new_replset_id %>",
     "members" : [
     <% @members.each_with_index do |member, index| -%>
       { "_id" : <%= index %>, "host" : "<%= member['fqdn'] %>:27017", "priority" : <%= member['hidden']? 0 : member['priority'] %>, "hidden" : <%= member['hidden'] || false %> },
     <% end %>
     ]
}

<% if @old_replset_id.to_s.empty? %>
rs.initiate(cfg);
<% else %>
rs.reconfig(cfg);
<% end %>
